@page "/"

@using Microsoft.AspNetCore.Components.WebAssembly.Hosting

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<EditForm Model="@editorOptions">
    <CKEditor Id="MyEditor1"
              @bind-Value=@editorOptions.InitialText
              UrlToPostImage=@baseAddress>
    </CKEditor>
</EditForm>

@code {
    CKEditorModel editorOptions;
    string baseAddress;

    protected override async Task OnInitializedAsync()
    {
        var builder = WebAssemblyHostBuilder.CreateDefault();
        baseAddress = $@"{builder.HostEnvironment.BaseAddress}api/file/upload";

        editorOptions = new CKEditorModel();
        editorOptions.InitialText = "Welcome to Qaiser Mehmood github editor5-blazor app";
        var txt = await Task.Run(() => 1);
    }
}